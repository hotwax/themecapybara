{
  "fields": [
    {
      "type": "collection",
      "multifield": true,
      "fieldLabel": [
        "title",
        "value"
      ],
      "fields": [
        {
          "type": "input",
          "inputType": "text",
          "placeholder": "Title",
          "label": "Card Title",
          "model": "title"
        },
        {
          "type": "material-textarea",
          "rows": 10,
          "max": 500,
          "placeholder": "text",
          "label": "Text",
          "model": "text"
        },
        {
          "type": "input",
          "inputType": "text",
          "placeholder": "Text Color",
          "label": "Text Color",
          "model": "textColor"
        },
        {
          "type": "pathbrowser",
          "browserRoot": "/content/themecapybara/assets",
          "placeholder": "Image",
          "label": "Card Image",
          "model": "image"
        },
        {
          "type": "inputlink",
          "browserRoot": "/content/themecapybara/pages",
          "placeholder": "link",
          "label": "Link",
          "model": "link",
          "internalLinkPlaceholder": "Link",
          "urlPlaceholder": "URL"
        },
        {
          "type": "input",
          "inputType": "text",
          "placeholder": "Button Text",
          "label": "Button Text",
          "model": "buttontext"
        },
        {
          "type": "input",
          "inputType": "text",
          "model": "linkType",
          "visible": false
        },
        {
          "type": "input",
          "inputType": "text",
          "model": "imageLinkType",
          "visible": false
        }
